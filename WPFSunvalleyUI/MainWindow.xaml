<Window x:Class="WPFSunvalleyUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFSunvalleyUI"
        mc:Ignorable="d" Background="#F6F6F6"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Button Content="Text" Margin="0,20,0,0" 
                Width="100"/>
        <Button Content="Disable" Margin="0,20,0,0" 
                Width="100" IsEnabled="False"/>
        <TextBox Margin="0,20,0,0" Width="160" />
    </StackPanel>
</Window>
